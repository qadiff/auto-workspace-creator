{
  "name": "auto-workspace-creator",
  "displayName": "%displayName%",
  "publisher": "qadiff",
  "description": "%description%",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:autoWorkspaceCreator.createNow",
    "onCommand:autoWorkspaceCreator.findAndOpenNearest",
    "onCommand:autoWorkspaceCreator.toggle"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoWorkspaceCreator.createNow",
        "title": "%cmd.createNow%"
      },
      {
        "command": "autoWorkspaceCreator.findAndOpenNearest",
        "title": "%cmd.findNearest%"
      },
      {
        "command": "autoWorkspaceCreator.toggle",
        "title": "%cmd.toggle%"
      }
    ],
    "configuration": {
      "title": "%cfg.title%",
      "properties": {
        "autoWorkspaceCreator.enabled": {
          "type": "boolean",
          "default": true,
          "description": "%cfg.enabled%"
        },
        "autoWorkspaceCreator.confirmationMode": {
          "type": "string",
          "enum": [
            "alwaysAsk",
            "askOncePerRepo",
            "silentIfSafe",
            "never"
          ],
          "default": "alwaysAsk",
          "description": "%cfg.confirmationMode%"
        },
        "autoWorkspaceCreator.writeToRepoRootIfDetected": {
          "type": "boolean",
          "default": true,
          "description": "%cfg.writeToRepoRoot%"
        },
        "autoWorkspaceCreator.workspaceFileNamePattern": {
          "type": "string",
          "default": "${folderName}.code-workspace",
          "description": "%cfg.wsNamePattern%"
        },
        "autoWorkspaceCreator.sanitizeName": {
          "type": "boolean",
          "default": true,
          "description": "%cfg.sanitizeName%"
        },
        "autoWorkspaceCreator.searchDepth": {
          "type": "object",
          "default": {
            "up": 10,
            "down": 1
          },
          "description": "%cfg.searchDepth%"
        },
        "autoWorkspaceCreator.ignorePaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "~",
            "/etc",
            "/var",
            "/tmp",
            "node_modules",
            "C:\\\\Windows",
            "C:\\\\Program Files",
            "/System",
            "/Library"
          ],
          "description": "%cfg.ignorePaths%"
        },
        "autoWorkspaceCreator.keyProjectFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".git",
            "package.json",
            "pyproject.toml",
            "requirements.txt",
            "Pipfile",
            "Cargo.toml",
            "go.mod",
            "pom.xml",
            "build.gradle",
            "*.sln"
          ],
          "description": "%cfg.keyProjectFiles%"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "package": "vsce package",
    "publish": "vsce publish",
    "lint": "eslint src test --ext .ts",
    "test": "mocha --require ts-node/register test/**/*.test.ts",
    "test:e2e": "npm run compile && node ./scripts/e2e.js",
    "vsce": "vsce"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.10.2",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vscode-nls-dev": "^4.0.0"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/qadiff/auto-workspace-creator.git"
  },
  "bugs": {
    "url": "https://github.com/qadiff/auto-workspace-creator/issues"
  },
  "homepage": "https://github.com/qadiff/auto-workspace-creator#readme",
  "keywords": [
    "auto",
    "multi-root",
    "project",
    "qadiff",
    "workspace"
  ],
  "dependencies": {
    "vscode-nls": "^5.0.0"
  },
  "volta": {
    "node": "24.11.1"
  }
}
